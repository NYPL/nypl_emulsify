{% set heading_blockname = address_bar__base_class %}
{% set text_blockname = address_bar__base_class %}

{# Heading #}
{% if address_bar__location %}
  {% include "@atoms/02-text/00-headings/_heading.twig" with {
    heading_level: '3',
    heading: address_bar__location,
    heading_base_class: 'heading',
  } %}
{% endif %}
{% if address_bar__address %}
  {% include "@atoms/02-text/text/text.twig" with {
    text_base_class: 'address',
    text_content: address_bar__address,
  } %}
{% endif %}
{# Directions Link #}
{% if address_bar__directions_url %}
  {% include "@atoms/01-links/link/link.twig" with {
    link_base_class: 'directions',
    link_content: 'Directions',
    link_url: address_bar__directions_url,
  } %}
{% endif %}
{# Phone number #}
{% if address_bar__phone_number %}
  <div>
    Call
    {% include "@atoms/01-links/link/link.twig" with {
      link_base_class: 'phone',
      link_content: address_bar__phone_number,
      link_url: 'tel:' ~ address_bar__phone_number,
    } %}
  </div>
{% endif %}
