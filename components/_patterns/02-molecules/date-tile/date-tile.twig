{% set ib_base_class = ib_base_class|default('date-tile') %}

<div {{ bem(ib_base_class, [], ib_blockname) }} aria-hidden="true">
  <div {{ bem('date', [], ib_base_class) }}>
    {% if ongoing == true %}
      {% include "@molecules/date-tile/_date-tile--date.twig" with {
        datetile__month: 'Ongoing',
      } %}
    {% elseif date(datetile_start_date) < date() and date(datetile_end_date) > date() %}
      {% include "@molecules/date-tile/_date-tile--date.twig" with {
        datetile__month: 'Open',
        datetile__day: 'Now',
      } %}
    {% else %}
      {% include "@molecules/date-tile/_date-tile--date.twig" with {
        datetile__month: datetile_start_date|date('M'),
        datetile__day: datetile_start_date|date('n'),
      } %}
    {% endif %}
  </div>
  {% if datetile_end_date %}
    <span {{ bem('separator', [], ib_base_class) }}>â€“</span>
    <div {{ bem('date', [], ib_base_class) }}>
      {% include "@molecules/date-tile/_date-tile--date.twig" with {
        datetile__month: datetile_end_date|date('M'),
        datetile__day: datetile_end_date|date('n'),
      } %}
    </div>
  {% endif %}
</div>
